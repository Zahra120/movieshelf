
html
   head
      link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", crossorigin="anonymous")


   body
      include navbar

      div(class="container")
         div(class="row")
            each movie in movies

               div(class=" col-md-3")
                  a(href="/movies/" + movie.name  class="thumbnail")
                     img(src = movie.imgUrl )
                     h3= movie.name
